<div id="blog-container">
<h1><a href="/articles">Caity's Adventures!</a></h1>
<div id="table">
<br>
<h3 class="new"><%= link_to 'Create New Post', new_article_path %></h3>
<br>
<table>
  <tr>
    <th>__Previous Posts__</th>
  </tr>

<% @articles.each do |article| %>
  <tr>
    <td><%= link_to article.title, article_path(article) %></td>
    <td colspan="100"></td>
    <td><%= link_to 'Edit', edit_article_path(article) %></td>
    <td><%= link_to 'Delete', article_path(article),
                    method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>
</div>
<div id="post">
  <% @articles.each do |article| %>
    <%= article.title %>
    <%= article.text %>
    <% end %>
</div>
</div>
<footer>
</footer>