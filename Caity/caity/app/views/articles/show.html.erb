<a href="/articles"><h1>Caity's Blog!</h1></a>

<div id="show">
<%= image_tag @article.photo.url(:medium) %>
<h2 class="title">
  <%= @article.title %>
</h2>

<p class="text">
  <%= @article.text %>
</p>

<div id="edit-link">
<%= link_to 'Edit Post', edit_article_path(@article) %>
|
<%= link_to 'Back', articles_path %>
</div>

<div id="comments">
</div>
<p>Comments</p>
<%= render @article.comments %>

<p>Add a comment:</p>
<%= render "comments/form" %>

</div>