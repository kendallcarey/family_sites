
#main-content {
  margin-top: 0px;
  text-align: center;
  background: url("<%= asset_path 'food.jpg' %>") no-repeat center center fixed;
  -webkit-background-size: cover;
  -moz-background-size: cover;
  -o-background-size: cover;
  background-size: cover;
  min-height: 800px;
  min-width: 1024px;
}

@font-face {
  font-family: 'thiamine';
  src: url("<%= asset_path 'assets/thiamine.otf' %>");
}

h1 {
  padding-top: 2.35em;
  font-family: 'thiamine';
  /*font-weight: bold;*/
  color: white;
  font-size: 8em;
}

h3 {
  padding-top: 15px;
  font-family: Helvetica;
  font-size: 16px;
  color: white;
  text-decoration: none;
}